<resources xmlns:tools="http://schemas.android.com/tools">
        <!-- Base application theme -->
        <style name="Theme.BMI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
            <!-- Primary color -->
            <item name="colorPrimary">@color/primaryColor</item>
            <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
            <item name="colorOnPrimary">@color/primaryTextColor</item>

            <!-- Secondary color -->

            <item name="colorOnSecondary">@color/secondaryTextColor</item>
            <item name="colorSecondary">@color/primaryColor</item>
            <item name="colorSecondaryVariant">@color/primaryColor</item>

            <!-- Status bar color -->
            <item name="android:statusBarColor" tools:targetApi="l">@color/primaryColor</item>
        </style>

    <style name="OrangeButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="cornerRadius">8dp</item> <!-- Optional, to match Material Design guidelines -->
    </style>

    <style name="Orange">
        <item name="android:background">@color/orange</item>
    </style>
    </resources>

